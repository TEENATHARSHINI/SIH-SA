# Application Settings
APP_NAME="E-Consultation Insight Engine"
APP_ENV=development  # development, testing, production
DEBUG=true
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Settings
DATABASE_URL=postgresql://postgres:postgres@db:5432/sentiment_engine
DATABASE_TEST_URL=sqlite:///./test.db
DATABASE_ECHO=false

# Redis Settings
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=your-redis-password

# Frontend Settings
FRONTEND_URL=http://localhost:8501
API_URL=http://localhost:8000

# Email Settings (for notifications, password reset, etc.)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAILS_FROM_EMAIL=noreply@yourdomain.com
EMAILS_FROM_NAME="E-Consultation System"

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn

# Model Settings
MODEL_CACHE_DIR=./models
HUGGINGFACE_HUB_CACHE=./models/huggingface
TRANSFORMERS_CACHE=./models/transformers

# File Upload Settings
UPLOAD_DIR=./data/uploads
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=text/plain,text/csv,application/json

# Rate Limiting
RATE_LIMIT=100
RATE_LIMIT_WINDOW=60  # seconds

# CORS Settings
CORS_ORIGINS=["http://localhost:8501", "http://localhost:8000"]
CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_HEADERS=["Content-Type", "Authorization"]

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/docs
API_REDOC_PATH=/redoc

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# Admin User (for first-time setup)
FIRST_SUPERUSER=admin@econsultation.gov
FIRST_SUPERUSER_PASSWORD=admin123  # Change this in production

# Security
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24
SECURE_COOKIES=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true

# Feature Flags
FEATURE_EMAIL_VERIFICATION=false
FEATURE_RATE_LIMITING=true
FEATURE_MAINTENANCE_MODE=false

# External Services
GOOGLE_ANALYTICS_ID=your-ga-id
RECAPTCHA_SITE_KEY=your-recaptcha-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret
